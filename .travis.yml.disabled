sudo: required
dist: xenial

stages:
  - test
  - deploy

language: node_js
node_js: 8

os:
  - linux
  # - osx

env:
  - HAXE_VERSION=stable
  - HAXE_VERSION=latest
  - HAXE_VERSION=nightly
  
install:
  - npm i -g lix@15.5.4
  - lix install haxe $HAXE_VERSION
  - lix download
  
script:
  - lix run travix node
  - lix run travix neko
  - lix run travix cs -D erase_generics
  - if [[ "$(haxe -version)" =~ ^4.* ]]; then lix run travix java -D jvm; fi
  # - if [[ "$(haxe -version)" =~ ^4.* ]]; then lix run travix interp; fi # haxe3 fails
  - if [[ "$(haxe -version)" =~ ^4.* ]]; then lix run travix lua; fi # https://github.com/HaxeFoundation/haxe/issues/7544
  - lix run travix php
  - lix run travix cpp

jobs:
  include:
    # - stage: test # should uncomment this when there is no matrix above (e.g. only one os, one env, etc)
    - stage: deploy
      os: linux
      install:
        - npm i -g lix
        - lix download
      script: skip
      env:
        secure: 
      after_success:
        - lix run travix install
        - lix run travix release
